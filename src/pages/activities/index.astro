---
import Layout from "../../layouts/Layout.astro";
import LinkGrid from "../../components/LinkGrid.astro";

interface Item {
    title: string;
    href: string;
    imageUrl: string;
}

const activities: Item[] = [
    {
        title: "Focení a úprava",
        href: "/activities/foceni-uprava",
        imageUrl: "/images/activities/foceni/foceni1.jpg",
    },
    {
        title: "Pasení",
        href: "/activities/paseni",
        imageUrl: "/images/activities/paseni/paseni1.jpg",
    },
    {
        title: "Agility",
        href: "/activities/agility",
        imageUrl: "/images/activities/agility/agility1.jpg",
    },
    {
        title: "Canicross a bikejoring",
        href: "/activities/canicross-bikejoring",
        imageUrl: "/images/activities/canicross/canicross1.jpg",
    },
    {
        title: "Hoopers",
        href: "/activities/hoopers",
        imageUrl: "/images/activities/hoopers/hoopers1.jpg",
    },
    {
        title: "Dogfrisbee",
        href: "/activities/dogfrisbee",
        imageUrl: "/images/activities/dogfrisbee/dogfrisbee1.jpg",
    },
];
---

<Layout>
    <section class="activities">
        <h1>Aktivity</h1>
        <p class="activities__intro">
            Podívejte se na aktivity, kterým se s naší smečkou věnujeme.
        </p>
        <LinkGrid items={activities} />
    </section>
</Layout>

<style>
    .activities {
        max-width: 960px;
        margin: auto;
        padding: 3rem 1rem;
    }
    .activities h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: rgb(var(--black));
    }
    .activities__intro {
        text-align: center;
        color: rgb(var(--gray-dark));
        margin-bottom: 2rem;
    }
</style>
