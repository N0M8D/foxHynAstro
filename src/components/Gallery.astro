---
// src/components/Gallery.astro
export interface Props {
    images: string[];
    alt?: string;
}

const { images, alt = "" } = Astro.props as Props;
---

{
    images.length > 0 && (
        <div class="gallery">
            {images.map((src) => (
                <img src={src} alt={alt} loading="lazy" />
            ))}
        </div>
    )
}

<style>
    .gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 2rem;
        justify-content: center;
    }

    .gallery img {
        width: 100%;
        max-width: 300px;
        border-radius: 8px;
        object-fit: cover;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
