---
import HeaderLink from "./HeaderLink.astro";
import SocialLinks from "./SocialLinks.astro";
import MenuToggle from "./MenuToggle.jsx"; // 💡 importujeme React komponentu
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<div class="top-bar">
			<h1 class="site-title"><a href="/">{SITE_TITLE}</a></h1>

			<!-- Pro desktop -->
			<div class="social-wrapper social-desktop">
				<SocialLinks />
			</div>

			<!-- Hamburger -->
			<button class="menu-toggle" aria-label="menu">
				<span class="icon-open">☰</span>
				<span class="icon-close">✖</span>
			</button>
		</div>

		<!-- Pro mobil -->
		<div class="social-wrapper social-mobile">
			<SocialLinks />
		</div>

		<!-- Navigační odkazy -->
		<div class="internal-links">
			<HeaderLink href="/">O mně</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/myDogs">Smečka</HeaderLink>
			<HeaderLink href="/chovatelskaStanice"
				>Chovatelská stanice</HeaderLink
			>
			<HeaderLink href="/activities">Aktivity</HeaderLink>
			<HeaderLink href="/about">xxx</HeaderLink>
		</div>
	</nav>

	<MenuToggle client:load />
	<!-- 💥 přidání interaktivity -->
</header>
